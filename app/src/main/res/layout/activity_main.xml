<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txt_latitude_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="116dp"
        android:layout_marginTop="96dp"
        android:text="@string/latitude"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_latitude"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="23.12399"
        android:layout_marginStart="27sp"
        app:layout_constraintStart_toEndOf="@id/txt_latitude_title"
        app:layout_constraintTop_toTopOf="@id/txt_latitude_title"
        android:textSize="18sp"
        />

    <TextView
        android:id="@+id/txt_longitude_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/longitude"
        app:layout_constraintTop_toBottomOf="@id/txt_latitude_title"
        app:layout_constraintStart_toStartOf="@id/txt_latitude_title"
        android:textSize="18sp"
        />

    <TextView
        android:id="@+id/txt_longitude"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="32.09993"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@id/txt_longitude_title"
        app:layout_constraintTop_toTopOf="@id/txt_longitude_title"
        android:layout_marginStart="12sp"
        />
</androidx.constraintlayout.widget.ConstraintLayout>