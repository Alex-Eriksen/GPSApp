<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txt_latitude_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="116dp"
        android:layout_marginTop="96dp"
        android:text="@string/latitude"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_latitude"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0.0"
        android:layout_marginStart="27sp"
        app:layout_constraintStart_toEndOf="@id/txt_latitude_title"
        app:layout_constraintTop_toTopOf="@id/txt_latitude_title"
        android:textSize="18sp"
        />

    <TextView
        android:id="@+id/txt_longitude_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/longitude"
        app:layout_constraintTop_toBottomOf="@id/txt_latitude_title"
        app:layout_constraintStart_toStartOf="@id/txt_latitude_title"
        android:textSize="18sp"
        />

    <TextView
        android:id="@+id/txt_longitude"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0.0"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@id/txt_longitude_title"
        app:layout_constraintTop_toTopOf="@id/txt_longitude_title"
        android:layout_marginStart="12sp"
        />

    <TextView
        android:id="@+id/txt_speed_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/speed"
        app:layout_constraintTop_toBottomOf="@id/txt_longitude_title"
        app:layout_constraintStart_toStartOf="@id/txt_longitude_title"
        android:textSize="18sp"
        />

    <TextView
        android:id="@+id/txt_speed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0.0"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@id/txt_speed_title"
        app:layout_constraintTop_toTopOf="@id/txt_speed_title"
        android:layout_marginStart="12sp"
        />

    <TextView
        android:id="@+id/txt_accuracy_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/accuracy"
        app:layout_constraintTop_toBottomOf="@id/txt_speed_title"
        app:layout_constraintStart_toStartOf="@id/txt_speed_title"
        android:textSize="18sp"
        />

    <TextView
        android:id="@+id/txt_accuracy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0.0"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@id/txt_accuracy_title"
        app:layout_constraintTop_toTopOf="@id/txt_accuracy_title"
        android:layout_marginStart="12sp"
        />

    <TextView
        android:id="@+id/txt_altitude_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/altitude"
        app:layout_constraintTop_toBottomOf="@id/txt_accuracy_title"
        app:layout_constraintStart_toStartOf="@id/txt_accuracy_title"
        android:textSize="18sp"
        />

    <TextView
        android:id="@+id/txt_altitude"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0.0"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@id/txt_altitude_title"
        app:layout_constraintTop_toTopOf="@id/txt_altitude_title"
        android:layout_marginStart="12sp"
        />

    <TextView
        android:id="@+id/txt_bearing_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/bearing"
        app:layout_constraintTop_toBottomOf="@id/txt_altitude_title"
        app:layout_constraintStart_toStartOf="@id/txt_altitude_title"
        android:textSize="18sp"
        />

    <TextView
        android:id="@+id/txt_bearing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0.0"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@id/txt_bearing_title"
        app:layout_constraintTop_toTopOf="@id/txt_bearing_title"
        android:layout_marginStart="12sp"
        />

    <Button
        android:id="@+id/btn_refresh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/refresh"
        android:layout_marginTop="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_bearing_title" />


    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/sw_auto_update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/auto_update"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_refresh" />
</androidx.constraintlayout.widget.ConstraintLayout>